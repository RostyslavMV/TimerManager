<ListBox x:Class="TimerManager.TimerListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimerManager"
             mc:Ignorable="d" 
             Background="{StaticResource BackgroundLightBrush}"
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="600" d:DesignWidth="350" BorderBrush="{x:Null}">
    <ListBox.Resources>
        <DataTemplate x:Key="TimerTemplate">
            <local:TimerControl />
        </DataTemplate>
        <DataTemplate x:Key="AlarmClockTemplate">
            <local:AlarmClockControl />
        </DataTemplate>
        <local:TimerTypeTemplateSelector x:Key="TimerTypeTemplateSelector" />
    </ListBox.Resources>
    <ItemsControl ItemTemplateSelector="{StaticResource TimerTypeTemplateSelector}">
        
    </ItemsControl>
</ListBox>
